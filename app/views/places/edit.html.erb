<h1>Edit Place</h1>

<%= form_with(model: @place, url: place_path(@place), method: :patch) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :rating_avg %>
    <%= form.number_field :rating_avg, step: 0.1 %>
  </div>

  <div>
    <%= form.label :longitude %>
    <%= form.number_field :longitude, step: 0.0000001, required: true %>
  </div>

  <div>
    <%= form.label :latitude %>
    <%= form.number_field :latitude, step: 0.0000001, required: true %>
  </div>

  <div>
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
  </div>

  <div>
    <%= form.label :opening_hours %>
    <%= form.text_field :opening_hours %>
  </div>

  <div>
    <%= form.label :website %>
    <%= form.text_field :website %>
  </div>

  <div>
    <%= form.submit 'Update Place' %>
  </div>
<% end %>

<%= link_to 'Back to Place', place_path(@place) %>